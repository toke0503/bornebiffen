---
import MainLayout from "../layouts/MainLayout.astro";
import RundeCard from "../components/RundeCard.astro";
import FirkantCard from "../components/FirkantCard.astro";
import Heading from "../components/Heading.astro";
import Text from "../components/Text.astro";
import Button from "../components/Button.astro";
import Vitello from '../assets/images/vitello.png?url';
import Pip from '../assets/images/pip.png?url';
import VitelloCard from '../assets/images/vitellocard.png?url';
import PipCard from '../assets/images/pipungernecard.png?url';
import CirckelineFirkant from '../assets/images/cirkelinefirkant.png?url';
import VitelloFirkant from '../assets/images/vitellofirkant.png?url';
---
<MainLayout title="Komponentbibliotek">
	<main class="container mx-auto p-8 max-w-6xl">
		<h2 class="mb-8 font-sans text-3xl font-bold">KOMPONENTBIBLIOTEK</h2>
		<p class="mb-16 font-sans text-base">Her kan du se alle komponenter og elementer brugt på sitet.</p>

		<!-- Typografi -->
		<section class="mb-24">
			<h2 class="mb-8 font-sans text-3xl font-bold">TYPOGRAFI</h2>
			<p class="mb-12 font-sans text-base">Alle tekstelementer bruger Sausage font med responsive størrelser.</p>
			<div class="space-y-8">
				<div>
					<p class="mb-2 font-sans text-sm" style="opacity: 0.6;">H2 - Overskrifter (Sausage)</p>
					<p class="mb-2 font-sans text-sm" style="opacity: 0.6;">Desktop: 64px / Tablet: 32px / Mobile: 16px</p>
					<Heading level="2">SE DINE YNDLINGSKARAKTERER</Heading>
				</div>
				<div>
					<p class="mb-2 font-sans text-sm" style="opacity: 0.6;">H3 - Card titler (Sausage)</p>
					<p class="mb-2 font-sans text-sm" style="opacity: 0.6;">Desktop: 20px / Tablet: 16px / Mobile: 10px</p>
					<Heading level="3">CIRKELINE: HØJT FRA TRÆETS GRØNNE</Heading>
				</div>
				<div>
					<p class="mb-2 font-sans text-sm" style="opacity: 0.6;">P - Standard tekst (Sausage)</p>
					<p class="mb-2 font-sans text-sm" style="opacity: 0.6;">Desktop: 15px / Tablet: 10px / Mobile: 8px</p>
					<Text>Dette er standard brødtekst som bruges til links og generel tekst.</Text>
				</div>
				<div>
					<p class="mb-2 font-sans text-sm" style="opacity: 0.6;">P2 - Duration tekst (Sausage)</p>
					<p class="mb-2 font-sans text-sm" style="opacity: 0.6;">Desktop: 14px / Tablet: 10px / Mobile: 8px</p>
					<Text type="p2">14 MIN</Text>
				</div>
			</div>
		</section>

		<hr class="my-16 border-gray-300" />

		<!-- Farver -->
		<section class="mb-24">
			<h2 class="mb-8 font-sans text-3xl font-bold">FARVER</h2>
			<div class="grid grid-cols-2 md:grid-cols-4 gap-8">
				<div>
					<div class="w-full h-24 rounded-lg mb-2" style="background-color: #50c8e5;"></div>
					<p class="font-sans text-sm">Blå Primary</p>
					<p class="font-sans text-sm" style="opacity: 0.6;">#50c8e5</p>
				</div>
				<div>
					<div class="w-full h-24 rounded-lg mb-2" style="background-color: #3A9DB5;"></div>
					<p class="font-sans text-sm">Blå Dark</p>
					<p class="font-sans text-sm" style="opacity: 0.6;">#3A9DB5</p>
				</div>
				<div>
					<div class="w-full h-24 rounded-lg mb-2" style="background-color: #E8A5B8;"></div>
					<p class="font-sans text-sm">Pink</p>
					<p class="font-sans text-sm" style="opacity: 0.6;">#E8A5B8</p>
				</div>
				<div>
					<div class="w-full h-24 rounded-lg mb-2" style="background-color: #6B2E4A;"></div>
					<p class="font-sans text-sm">Pink Dark</p>
					<p class="font-sans text-sm" style="opacity: 0.6;">#6B2E4A</p>
				</div>
				<div>
					<div class="w-full h-24 rounded-lg mb-2" style="background-color: #C4B5D8;"></div>
					<p class="font-sans text-sm">Lilla</p>
					<p class="font-sans text-sm" style="opacity: 0.6;">#C4B5D8</p>
				</div>
				<div>
					<div class="w-full h-24 rounded-lg mb-2" style="background-color: #6B4A7E;"></div>
					<p class="font-sans text-sm">Lilla Dark</p>
					<p class="font-sans text-sm" style="opacity: 0.6;">#6B4A7E</p>
				</div>
				<div>
					<div class="w-full h-24 rounded-lg mb-2" style="background-color: #e6f7fd;"></div>
					<p class="font-sans text-sm">Baggrund</p>
					<p class="font-sans text-sm" style="opacity: 0.6;">#e6f7fd</p>
				</div>
				<div>
					<div class="w-full h-24 rounded-lg mb-2" style="background-color: #6B9CAC;"></div>
					<p class="font-sans text-sm">Footer</p>
					<p class="font-sans text-sm" style="opacity: 0.6;">#6B9CAC</p>
				</div>
			</div>
		</section>

		<hr class="my-16 border-gray-300" />

		<!-- Buttons -->
		<section class="mb-24">
			<h2 class="mb-8 font-sans text-3xl font-bold">BUTTONS</h2>
			<div class="flex flex-wrap gap-6">
				<Button size="small">Small Button</Button>
				<Button size="medium">Medium Button</Button>
				<Button size="large">Large Button</Button>
			</div>
		</section>

		<hr class="my-16 border-gray-300" />

		<!-- Runde Cards -->
		<section class="mb-24">
			<h2 class="mb-8 font-sans text-3xl font-bold">RUNDE CARDS</h2>
			<p class="mb-8 font-sans text-base">Bruges til karakterer med hover effekter: rotation af baggrund og zoom af karakter.</p>
			<div class="flex gap-12 flex-wrap">
				<RundeCard title="Vitello" img={Vitello} bg={VitelloCard} />
				<RundeCard title="Pipungerne" img={Pip} bg={PipCard} />
			</div>
		</section>

		<hr class="my-16 border-gray-300" />

		<!-- Firkantede Cards -->
		<section class="mb-24">
			<h2 class="mb-8 font-sans text-3xl font-bold">FIRKANTEDE CARDS</h2>
			<p class="mb-8 font-sans text-base">Bruges til filmvisning med hover effekter: skråt shadow og letter-spacing.</p>
			<div class="flex gap-12 flex-wrap">
				<FirkantCard 
					title="CIRKELINE: HØJT FRA TRÆETS GRØNNE" 
					duration="14 MIN" 
					img={CirckelineFirkant}
					color="#6B2E4A"
				/>
				<FirkantCard 
					title="VITELLO KØBER EN JULEGAVE" 
					duration="5 MIN" 
					img={VitelloFirkant}
					color="#6B4A7E"
				/>
			</div>
		</section>

		<hr class="my-16 border-gray-300" />

		<!-- Links -->
		<section class="mb-24">
			<h2 class="mb-8 font-sans text-3xl font-bold">LINKS</h2>
			<div class="space-y-6">
				<div>
					<p class="mb-2 font-sans text-sm" style="opacity: 0.6;">Footer links (blå)</p>
					<a href="#" class="footer-link">Om Børnebiffen</a>
				</div>
			</div>
		</section>

	</main>

	<style>
		/* Override Sausage font for UI text in component library */
		main h2,
		main p {
			font-family: ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
		}

		.footer-link {
			color: var(--color-blaa);
			text-decoration: underline;
			font-weight: 500;
			transition: opacity 0.2s ease;
		}
		.footer-link:hover {
			opacity: 0.8;
		}
	</style>
</MainLayout>