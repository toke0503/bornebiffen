---
import Logo from '../assets/images/logo.svg?url';
import Lup from '../assets/images/lup.svg?url';
import Laas from '../assets/images/laas.svg?url';
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<header class="bg-white">
    <div class="w-full px-4 sm:px-6 lg:px-12 py-6 flex items-center justify-between">
        <div class="flex items-start gap-4">
            <a href="/" class="block">
                <img src={Logo} alt="Børnebiffen logo" class="h-14 md:h-16" />
            </a>
            <div class="hidden sm:flex flex-col justify-center">
            </div>
        </div>

        <div class="flex items-center gap-4">
            <button aria-label="Søg" class="w-12 h-12 rounded-full bg-blaa flex items-center justify-center transition-all duration-300 hover:translate-x-1 hover:-translate-y-1" style="box-shadow: 0 0 0 transparent; --hover-shadow: -4px 4px 0 #3A9DB5;" onmouseenter="this.style.boxShadow=this.style.getPropertyValue('--hover-shadow')" onmouseleave="this.style.boxShadow='0 0 0 transparent'">
                <img src={Lup} alt="Søg" class="w-6 h-6" />
            </button>
            <button type="button" class="inline-flex items-center gap-2 bg-blaa text-white px-5 h-12 rounded-full transition-all duration-300 hover:translate-x-1 hover:-translate-y-1" style="box-shadow: 0 0 0 transparent; --hover-shadow: -4px 4px 0 #3A9DB5;" onmouseenter="this.style.boxShadow=this.style.getPropertyValue('--hover-shadow')" onmouseleave="this.style.boxShadow='0 0 0 transparent'">
                <img src={Laas} alt="Log ind" class="w-6 h-6" />
                <p class="m-0 leading-none">Log ind</p>
            </button>
        </div>
    </div>
</header>