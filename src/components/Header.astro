---
import Logo from '../assets/images/logo.svg?url';
import Lup from '../assets/images/lup.svg?url';
import Laas from '../assets/images/laas.svg?url';
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<header class="bg-white">
    <div class="w-full px-4 sm:px-6 lg:px-12 py-6 flex items-center justify-between">
        <div class="flex items-start gap-4">
            <a href="/" class="block">
                <img src={Logo} alt="Børnebiffen logo" class="h-14 md:h-16" />
            </a>
            <div class="hidden sm:flex flex-col justify-center">
            </div>
        </div>

        <div class="flex items-center gap-4">
            <button aria-label="Søg" class="w-12 h-12 rounded-full bg-blaa flex items-center justify-center hover:opacity-90">
                <img src={Lup} alt="Søg" class="w-6 h-6" />
            </button>
            <button type="button" class="inline-flex items-center gap-2 bg-blaa text-white px-5 h-12 rounded-full hover:opacity-95">
                <img src={Laas} alt="Log ind" class="w-6 h-6" />
                <span class="font-heading font-medium text-base leading-none">Log ind</span>
            </button>
        </div>
    </div>
</header>