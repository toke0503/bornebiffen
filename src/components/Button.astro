---
const { variant = "primary", size = "medium", href, ariaLabel } = Astro.props;

const baseClasses = "inline-flex items-center gap-2 bg-blaa text-white rounded-full transition-all duration-300 hover:translate-x-1 hover:-translate-y-1 font-heading";

// Responsive size classes: small (mobile), medium (tablet), large (desktop)
const sizeClasses = {
  "small": "px-4 h-10",
  "medium": "px-5 h-12",
  "large": "px-6 h-14"
};

// Compose responsive sizing so buttons are small on mobile, medium on tablet, large on desktop
const responsiveSize = "px-4 h-10 md:px-5 md:h-12 lg:px-6 lg:h-14";
---

{href ? (
  <a 
    href={href} 
    class:list={[baseClasses, responsiveSize]} 
    style="box-shadow: 0 0 0 transparent; --hover-shadow: -4px 4px 0 #3A9DB5;"
    onmouseenter="this.style.boxShadow=this.style.getPropertyValue('--hover-shadow')"
    onmouseleave="this.style.boxShadow='0 0 0 transparent'"
  >
    <span class="inline-flex items-center gap-2 lg:text-[15px] md:text-[10px] text-[8px] leading-none">
      <slot />
    </span>
  </a>
) : (
  <button 
    type="button"
    aria-label={ariaLabel}
    class:list={[baseClasses, responsiveSize]} 
    style="box-shadow: 0 0 0 transparent; --hover-shadow: -4px 4px 0 #3A9DB5;"
    onmouseenter="this.style.boxShadow=this.style.getPropertyValue('--hover-shadow')"
    onmouseleave="this.style.boxShadow='0 0 0 transparent'"
  >
    <span class="inline-flex items-center gap-2 lg:text-[15px] md:text-[10px] text-[8px] leading-none">
      <slot />
    </span>
  </button>
)}