---
import AllePopkorn from '../assets/images/allepopkorn.png?url';
import logo from '../assets/images/logo.svg';
import fs from '../assets/images/fs.png';
---
<footer class="footer">
    <div class="footer-content">
        <div class="footer-left">
            <img src={logo.src} alt="Børnebiffen logo" style="height: 7rem; width: auto; margin-left: 0;" />
            <nav class="footer-nav">
                <h3 class="footer-nav-title">
                    <img src={fs.src} alt="Filmstriben logo" style="height: 2.5rem; width: auto; margin-left: 0;" />
                </h3>
                <ul class="footer-links">
                    <li><a href="#" class="footer-link">Om Børnebiffen</a></li>
                    <li><a href="#" class="footer-link">Tilgængelighedserklæring</a></li>
                    <li><a href="#" class="footer-link">Cookies</a></li>
                    <li><a href="#" class="footer-link">Privatlivspolitik</a></li>
                    <li><a href="#" class="footer-link">Kontakt Os</a></li>
                </ul>
            </nav>
        </div>
        <div class="footer-right">
            <img src={AllePopkorn} alt="Popkorn karakterer" class="footer-image" />
        </div>
    </div>
</footer>

<style>
    .footer {
        background-color: #6B9CAC;
        color: white;
        padding: 3rem 0 2rem;
        font-family: 'Sausage', var(--font-heading, sans-serif);
    }

    .footer-content {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 2rem;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
    }

    .footer-left {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .footer-nav-title {
        margin: 0 0 1rem 0;
    }

    .footer-links {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .footer-link {
        color: var(--color-blaa);
        text-decoration: underline;
        font-weight: 500;
        transition: opacity 0.2s ease;
    }

    .footer-link:hover {
        opacity: 0.8;
    }

    .footer-right {
        display: flex;
        justify-content: flex-end;
        align-items: center;
    }

    .footer-image {
        width: 100%;
        max-width: 600px;
        height: auto;
        object-fit: contain;
    }

    @media (max-width: 1024px) {
        .footer-content { gap: 2rem; }
        .footer-left { gap: 1.5rem; }
        .footer-image { max-width: 400px; }
    }

    @media (max-width: 640px) {
        .footer { padding: 2rem 0 1.5rem; }
        .footer-content { padding: 0 1.5rem; gap: 1.5rem; }
        .footer-left { gap: 1rem; }
        .footer-image { max-width: 280px; }
    }
</style>